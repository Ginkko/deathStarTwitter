{{#if isEditing}}
  {{partial 'post/edit'}}
  <button {{action 'doneEditing'}}>Done</button>
{{else}}
  <button {{action 'edit'}}>Edit</button>
{{/if}}
<hr>
<div class="panel panel-default">
  <div class="panel-heading">

    <h1>{{model.user.name}} Tweets:</h1>
  </div>

  <h3 class='panel-body'>{{model.tweet}}</h3>

</div>
